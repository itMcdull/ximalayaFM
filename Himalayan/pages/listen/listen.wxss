page{
  overflow: hidden;
  background-color: #f8f8f8; 
  font-size: 16px; 
  height: 100%; width: 100%; color:#333; 
  font-family:"Microsoft YaHei",微软雅黑,"MicrosoftJhengHei",华文细黑,STHeiti,MingLiu;
}
.warpper{height: 100%; width: 100%; -webkit-font-smoothing:antialiased;}
.container{display: block; margin: 0; height: 100%; width: 100%; position: relative;}
image.icon{width: 40rpx; height: 40rpx; margin: 10rpx;}
.header{background-color: #fff;border-bottom:1rpx solid #f8f8f8;padding:0 20rpx; height: 80rpx; display: flex; justify-content:space-between; align-items: center;}
.header .login{font-weight: 600; color:#666;}

/*
  * 列表
*/
.lists {
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  padding:10rpx 20rpx;
  background-color: #fff;
}
.list image {
  width: 60rpx;
  height: 60rpx;
  display: block;
  margin: 0 auto;
}
.list {
  width: 170rpx;
  height: 170rpx;
  font-size: 1rem;
  display: flex;
  justify-content: center;
  flex-direction: column;
}
.list text {
  display: block;
  text-align: center;
  font-size: 1rem;
  color:#777;
}
.list .listT1{ 
  margin-top: 10rpx;
  font-size: .75rem;
}
.list .listT2{
  margin-top: 5rpx;
  font-size: .6rem;
}
.content {
  position: absolute;
  left: 0;
  top:295rpx;
  right: 0;
  bottom: 0;
  overflow: hidden;
  background-color: #fff;
  color:#adadad;
  clear: both;
}
.subscription {
  font-size: .8rem;
  position: relative;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  color:#666;
  border-bottom: 1rpx solid #f8f8f8;
  height: 90rpx;
}
.subscription text {
  padding: 0 25rpx;
  width: 180rpx;
  box-sizing: border-box;
}
.bottom-move {
  position: absolute;
  width: 120rpx;
  height: 4rpx;
  background-color: #f86442;
  top:87rpx;
  left: 45rpx;
  /* left: 220rpx; */
  transition: all 0.3s ease;
}

.addSub-wrapper{
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 100%;
}
.addSub {
  width: 272rpx;
  height: 72rpx;
  border-radius: 10rpx;
  border:1rpx solid #d9dfe5;
  display: flex;
  justify-content: center;
  flex-direction: row;
  align-items: center;
  margin: 40rpx;
  color:#333;
}
.swiper-wrapper {
  width: 100%;
  height: 100%;
}
.swiper-wrapper swiper-item {
  width: 100px;
  height: 100%;
  position: relative;
}
.recommendFY {
  margin-top: 15rpx; 
  padding:10rpx 20rpx;
