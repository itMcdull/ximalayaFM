
.container {
  display: block;
  background-color: #f7f8f9;
  width: 100%;
  height: 100%;
}
.header {
  overflow: hidden;
  width: 100%;
  background-color: #f1f0ee;
  padding:0 20rpx; 
  box-sizing: border-box;
}
.header .install {
  height: 66.666666rpx;
  display: flex;
  justify-content: flex-start;
  box-sizing: border-box;
  padding:18rpx;
}
.header .install image {
  width: 45rpx;
  height: 45rpx;
  line-height: 66.666666rpx;
  padding:0 30rpx 0 0;
  
}
.header-user {
  height: 260rpx;
  background-color: #f1f0ee;
  box-sizing: border-box;
  padding:20rpx 10rpx;
}
.userInfo{
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.userInfo .image-userInfo{
  width: 119rpx;
  height: 119rpx;
  background-color: #e3e4e5;
  border-radius: 50%;
  overflow: hidden;
}
.userInfo .usernameInfo {
  padding:0 20rpx;
  font-size: 0.8em;
}
.userInfo .usernameInfo .username {
  font-size: 1.1em;
  font-weight: 600;
  line-height: 1.1;
}
.userInfo .usernameInfo text{
  display: inline-block;
  font-size: 0.8rem;
  color:#999;
  margin-top:15rpx;
  padding:0 10rpx;
}
.listen-time {
  display: inline-block;
  height: 43prx;
  color:#999;
  margin-top: 40rpx;
  border-radius: 40rpx;
  border:1rpx solid #999;
  padding:9rpx 18rpx;
  font-size: 0.8rem;
}
/*
  * 列表
*/
.lists {
  background-color: #fff;
}
.lists .list1 {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.list {
  display: block;
  width: 150rpx;
  height: 120rpx;
  margin: 10rpx 0;
}
.list text {
  text-align: center;
  font-size: 0.7rem;
  margin:10rpx 0;
  display: block;
  vertical-align: middle;
}
.lists2 {
  margin-top:15rpx;
}
.lists2 .list {
  width:187.5rpx;
  overflow: hidden;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  padding:10rpx 0 0 0;
}
.lists2 image {
  position: relative;
  display: block;
  width: 50rpx;
  height: 50rpx;
  margin: 0 auto;
}
/*
  * 更多列表
*/
.more-lists {
  margin-top:15rpx;
  background-color: #fff;
  padding:0 20rpx;
}
.more-list,.more-list-night{
  height: 80rpx;
  width: 100%;
  line-height: 88rpx;
  box-sizing: border-box;
}
.more-list-night {
  position: relative;
}
.more-list image,.more-list-night image{
  width: 45rpx;
  height: 45rpx;
  margin-right:15rpx;
  position: relative;
  top:10rpx;
}
.more-list text,.more-list-night text{
  font-size: 0.8rem;
  border-bottom: 1rpx solid #f7f8f9;
  display: inline-block;
  width: 80%;
  color:#000;
  position: relative;
}
.more-list text:after{
  content: '';
  width: 14rpx;
  top:37rpx;
  left:630rpx;
  height: 14rpx;
  border-top: 4rpx solid #cdcdcd;
  border-right: 4rpx solid #cdcdcd;
  transform: rotate(45deg);
  position: absolute;
}
.more-list-night__circle {
  position: absolute;
  left:620rpx;
  top:0;
  
}
